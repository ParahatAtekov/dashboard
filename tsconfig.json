{
  "compilerOptions": {
    /* Basic Settings */
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    
    /* Path Aliases */
    "paths": {
      "@/*": ["src/*"]
    },

    /* Output */
    "declaration": true,
    "sourceMap": true,

    /* Best Practices */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}